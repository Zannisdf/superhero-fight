{
  "name": "superhero-fight",
  "version": "1.0.0",
  "description": "A superhero fight simulator",
  "main": "index.js",
  "author": "Giorgio Zanni <g.zanni@hotmail.com>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/jest": "27.4.1",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "^26.1.3",
    "jest": "27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "2.6.2",
    "simple-git-hooks": "2.7.0"
  },
  "scripts": {
    "lint": "eslint src --ext .js --cache",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch --coverage"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "pre-push": "jest --bail --findRelatedTests"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --cache",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^0.26.1",
    "jsdom": "^19.0.0"
  }
}
